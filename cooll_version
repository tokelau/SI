    pp[28]=pp[25];
    pp[25]=pp[24];
    pp[24]=m;
        m=pp[21];
    pp[21]=pp[23];
    pp[23]=m;
}
{   /*расфасовываем массив, который на один файл*/
    m=y[0];//расфасовать согласно базовым данным
    y[0]=y[14];
    y[14]=y[19];
