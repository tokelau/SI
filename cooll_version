        {
            y[i]=y[i]/y[32];
        }
        //printf("avg: %f\n", y[i]);
    }
    /*среднее квадратичное для каждого файла*/
        for (i=0; i<=31; i++)
        {
            csr[i]=csr[i]+((y[i]-pp[i])*(y[i]-pp[i]));
            //printf("avg: %f\n", csr[i]);
        }
        //printf("%f\n", csr[9]);
