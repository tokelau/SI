           //fprintf(qwero1, "%f\n", csr[i]);
        }
        //printf("%f\n", csr[11]);
        for (i=0; i<=31; i++)
        {
            fprintf(qwero1, "%f\n", sqrt(csr[i]));
        }

    fprintf(qwero1,"\n");
    fprintf(qwero1, "\n");

            fclose(qwero1);
    {//возврат на места для каждого файла
